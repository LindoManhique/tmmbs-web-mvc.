@{
    ViewData["Title"] = "About TMMBS";
}

<!-- Text-only hero -->
<section class="about-hero about-hero--textonly">
    <div class="about-hero__content">
        <h1>About TMMBS</h1>
        <p>Assurance • Advisory • Tax • Corporate Finance</p>
    </div>
</section>

<!-- Intro -->
<section class="container about-intro">
    <h2 class="about-section-title">Who We Are</h2>
    <p class="lead">
        TMMBS is an award-winning, African-owned business and management consulting firm.
        We deliver assurance, advisory, tax, and corporate finance services to organisations across
        South Africa and the continent. Our mandate is simple: <strong>clarity, speed, and integrity</strong>.
    </p>

    <div class="about-feature-grid">
        <div class="feature">
            <h3>Assurance First</h3>
            <p>
                Independent audits and reviews that stand up to scrutiny. We give stakeholders confidence to
                decide and to act.
            </p>
        </div>
        <div class="feature">
            <h3>Advisory With Impact</h3>
            <p>
                Strategy, performance improvement, and operational excellence — grounded in data and designed
                for execution.
            </p>
        </div>
        <div class="feature">
            <h3>Tax &amp; Compliance</h3>
            <p>
                End-to-end compliance and forward-looking tax planning so you stay compliant today and competitive tomorrow.
            </p>
        </div>
    </div>
</section>

<!-- Value pillars -->
<section class="container about-block">
    <h2 class="about-section-title">Our Value Pillars</h2>
    <ul class="pillars">
        <li><span class="pill">Clarity</span> — We translate complexity into plain language and actionable steps.</li>
        <li><span class="pill">Speed</span> — We are responsive, decisive, and delivery-focused.</li>
        <li><span class="pill">Integrity</span> — Ethics are non-negotiable; trust is our currency.</li>
        <li><span class="pill">Partnership</span> — We work shoulder-to-shoulder with our clients, not across the table.</li>
    </ul>
</section>

