@{
    ViewData["Title"] = "Sign Up";
    var returnUrl = (string?)ViewData["ReturnUrl"] ?? "/";
}

<div class="auth-wrap">
    <div class="auth-card">
        <h2 class="auth-title">Create Account</h2>

        <div id="signup-error" class="alert alert-error" style="display:none;"></div>
        <div id="signup-success" class="alert alert-success" style="display:none;"></div>

        <form id="signup-form" class="auth-form" novalidate>
            <div class="form-row">
                <label for="su-email">Email</label>
                <input id="su-email" type="email" class="input" placeholder="you@example.com" required />
            </div>

            <div class="form-row">
                <label for="su-password">Password</label>
                <div class="password-row">
                    <input id="su-password" type="password" class="input" placeholder="Min 8 chars, upper/lower/number/symbol" required />
                    <button type="button" id="toggle-signup-password" class="btn-ghost" aria-label="Show or hide password">Show</button>
                </div>

                <div class="pw-meter" id="pw-meter">
                    <div class="pw-meter-bar" id="pw-meter-bar" style="width:0%"></div>
                </div>
                <div class="pw-requirements" id="pw-req">
                    <span>• 8+ chars</span>
                    <span>• Upper & lower case</span>
                    <span>• Number</span>
                    <span>• Symbol</span>
                </div>
            </div>

            <div class="form-row">
                <label for="su-confirm">Confirm Password</label>
                <div class="password-row">
                    <input id="su-confirm" type="password" class="input" placeholder="Repeat password" required />
                    <button type="button" id="toggle-signup-confirm" class="btn-ghost" aria-label="Show or hide confirm password">Show</button>
                </div>
            </div>

            <button type="submit" class="btn-primary btn-block">Sign Up</button>
        </form>

        <p class="auth-switch">
            Already have an account?
            <a id="signin-link" href="/Auth/SignIn">Sign in</a>
        </p>
    </div>
</div>

@section Scripts {
    <script>
        const returnUrl = "@returnUrl";
        const signIn = document.getElementById('signin-link');
        signIn.href = '/Auth/SignIn' + (returnUrl ? ('?returnUrl=' + encodeURIComponent(returnUrl)) : '');

        // toggle buttons
        window.Auth?.wireShowHide('toggle-signup-password', 'su-password');
        window.Auth?.wireShowHide('toggle-signup-confirm', 'su-confirm');

        // attach strength meter live updates
        window.Auth?.attachStrengthMeter('su-email', 'su-password', 'pw-meter-bar');

        document.getElementById('signup-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const email = document.getElementById('su-email').value.trim();
            const pw = document.getElementById('su-password').value;
            const confirm = document.getElementById('su-confirm').value;

            if (pw !== confirm) {
                window.Auth?.showError('signup-error', 'Passwords do not match.');
                return;
            }

            const check = window.Auth?.validatePassword(email, pw);
            if (!check.ok) {
                window.Auth?.showError('signup-error', 'Password too weak:\n• ' + check.issues.join('\n• '));
                return;
            }

            try {
                await firebase.auth().createUserWithEmailAndPassword(email, pw);
                window.location.href = returnUrl || '/';
            } catch (err) {
                window.Auth?.showError('signup-error', err?.message || 'Sign up failed.');
            }
        });
    </script>
}
