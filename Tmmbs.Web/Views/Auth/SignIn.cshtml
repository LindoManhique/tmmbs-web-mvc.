@{
    ViewData["Title"] = "Sign In";
}
<h2>Sign In</h2>

<form id="signin-form" style="max-width:620px">
    <input id="email" type="email" placeholder="Email" required />
    <input id="password" type="password" placeholder="Password" required />
    <button type="submit">Sign In</button>
</form>

<p style="margin-top:10px">
    New here? <a id="signup-link" href="/Auth/SignUp">Create an account</a>
</p>

@section Scripts {
    <script>
        // Read returnUrl (fallback to home)
        const params = new URLSearchParams(window.location.search);
        const returnUrl = params.get('returnUrl') || '/';

        // Keep returnUrl when switching to Sign Up
        const signupLink = document.getElementById('signup-link');
        signupLink.href = '/Auth/SignUp' + (returnUrl ? ('?returnUrl=' + encodeURIComponent(returnUrl)) : '');

        document.getElementById('signin-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;
            try {
                await firebase.auth().signInWithEmailAndPassword(email, password);
                window.location.href = returnUrl;  // no Dashboard
            } catch (err) {
                alert(err.message);
            }
        });
    </script>
}
